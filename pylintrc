[FORMAT]

# Maximum number of characters on a single line.
max-line-length=500

# Maximum number of lines in a module
max-module-lines=1000

# String used as indentation unit. This is usually " " (4 spaces) or "\t" (1
# tab).
indent-string='\t'


[MESSAGES CONTROL]
# numpy generates a lot of E1101
# C0103 gets triggered by using all caps names for zgoubi elements, it also does not like short variable names, which are used quite a lot
disable=E1101,C0103


